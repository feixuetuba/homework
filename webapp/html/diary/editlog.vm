<form action="$link.setAction("html/diary")" onsubmit="return validateLogForm(this)" method="post" name="logForm">
<input type="hidden" name="id" value="$log.id" />
<input type="hidden" name="log_id" id="log_id" value="$log.id" />
<input type="hidden" name="sid" value="$g_site_id" />
<input type="hidden" name="clientType" value="0" />
<input type="hidden" name="status" value="${log.status}" />
<input type="hidden" name="__method" value="" />
<input type="hidden" name="__ClientId" value="$dlog.gen_client_id()" />

<input type="hidden" value="$valiDate" name="valiDate" id="valiDate">
<input type="hidden" value="$g_user.id" name="userid" id="userid">
<div class="page_top diary">
	<h4>编辑日记<span class="date">今天是: $date.get("MMMMM d, yyyy  EEEEE")</span></h4>
</div>
<div class="page_content">
	<div class="form">
		<div class="form_module">
    		<div class="form_module_title">分类:</div>
    		<div class="form_module_content">
    			<select name="catalogId">
					#foreach($cat in $catalogs)
						<option value="${cat.id}"#if(${log.catalog.id}==${cat.id}) selected#end>$text.html(${cat.name})</option>
					#end
				</select>
				<a href="$dlog.root()/html/sitemgr/catalog_add.vm?sid=$g_site_id">&lt;添加分类&gt;</a>
    		</div>
    		<div class="clear"></div>
    	</div>
    	<div class="form_module">
    		<div class="form_module_title">天气:</div>
    		<div class="form_module_content">
    			#set($weathers = ["sunny","ptcloudy","cloudy","showers","rain","storms","snow","flurries","ice","dark"])
                <select id="select" name="weather" onchange="changeWeather(options[selectedIndex].value)">
                #foreach($w in $weathers)
                <option value="$w"#if($log.weather.equals($w)) selected#end>$w</option>
                #end
                </select>
				<img id="img_weather" height="20" alt="weather" src="" align="absmiddle" />
				<script language="javascript" type="text/javascript">
				function changeWeather(weather){
					var img = '$html.image_src("html/weather/default/")'+weather+'.gif';
					document.images['img_weather'].src=img;
				}
				changeWeather("${log.weather}");
				</script>
    		</div>
    		<div class="clear"></div>
    	</div>
    	<div class="form_module">
    		<div class="form_module_title">背景音乐:</div>
    		<div class="form_module_content">
    			#if($g_site.songs.size()>0)
                    <select name="bgSound">
                    	<option value="-1" selected>[无背景音乐]</option>
                    	#foreach($song in $g_site.songs)
							<option value="${song.id}" #if(${log.bgSound} && ${log.bgSound.id}==${song.id})selected#end>&nbsp;&#8226;&nbsp;${song.title}</option>
                    	#end
                    </select>
				#end
    		</div>
    		<div class="clear"></div>
    	</div>
        <div class="form_module">
    		<div class="form_module_title">标题:</div>
    		<div class="form_module_content">
    			<input type="text" name="title" maxlength="100" size="48" value="$!{log.title}" />&nbsp;{必须填写}
    		</div>
    		<div class="clear"></div>
    	</div>
        <div class="form_module">
    		<div class="form_module_title">作者:</div>
    		<div class="form_module_content">
    			<input type="text" name="author" size="12" value="$!{log.author}" />
				<input type="text" name="authorUrl" size="35" value="$!{log.authorUrl}" />
    		</div>
    		<div class="clear"></div>
    	</div>
        <div class="form_module">
    		<div class="form_module_title">关键字:</div>
    		<div class="form_module_content">
    			<input type="text" name="tags" maxlength="40" size="35" value="$!{log.keyword}" />&nbsp;(多个关键字请用空格隔开)
    		</div>
    		<div class="clear"></div>
    	</div>
		
		<div class="form_module">
    		<div class="form_module_title">插入相册图片</div>
    		<div class="form_module_content">
				<a href="javascript:selectPhoto()">&lt;选择相本&gt;</a>
    		</div>
    		<div class="clear"></div>
    	</div>
    	<div class="form_module_textarea">
			<textarea name="content" style="WIDTH: 100%; HEIGHT: 400px">$!{log.content}</textarea>
			<div class="tips">提示：插入日记图片，请点击编辑器上的 $html.img("html/icon/default/upload_img.gif","上传图片！") 图标！</div>
    		<div class="clear"></div>
    	</div>
		<div class="form_module">
    		<div class="form_module_title">上传附件:</div>
    		<div class="form_module_content">
				
				<iframe src="$dlog.root()/html/diary/_upload_annex.vm?sid=$g_site.id&id=$g_user.id&diaryID=$!{log.id}&valiDate=$valiDate" frameBorder="0" width="400" height="22" scrolling="no" id="frame2"></iframe>
				<div class="spacer_5"></div>
				<div id="annexList">
					#if(${valiDate})
        				#set($cuntent=$DIARY_tool.annex_table("$!{g_user.id}","$!{valiDate}"))
        				#if($cuntent!="NULL")
        					$cuntent
        				#end
        			#else
        				
        			#end
				</div>
    		</div>
    		<div class="clear"></div>
    	</div>
		<div class="form_module">
    		<div class="form_module_title">引用地址:</div>
    		<div class="form_module_content">
				<input type="text" name="refUrl" size="50" value="$!{log.refUrl}" />
    		</div>
    		<div class="clear"></div>
    	</div>
		<div class="form_module">
    		<div class="form_module_title">心情系数:</div>
    		<div class="form_module_content">
				<input type="radio" value="1" name="moodLevel"#if(${log.moodLevel}==1) checked#end /> $html.img("html/mood/default/1.gif","1")
                <input type="radio" value="2" name="moodLevel"#if(${log.moodLevel}==1) checked#end /> $html.img("html/mood/default/2.gif","2")
                <input type="radio" value="3" name="moodLevel"#if(${log.moodLevel}==1) checked#end /> $html.img("html/mood/default/3.gif","3")
                <input type="radio" value="4" name="moodLevel"#if(${log.moodLevel}==1) checked#end /> $html.img("html/mood/default/4.gif","4")
                <input type="radio" value="5" name="moodLevel"#if(${log.moodLevel}==1) checked#end /> $html.img("html/mood/default/5.gif","5")
    		</div>
    		<div class="clear"></div>
    	</div>
		<div class="form_module">
    		<div class="form_module_title">日记设置:</div>
    		<div class="form_module_content">
				<input type="checkbox" name="notify" value="1" #if(!$dlog.is_email(${g_user.contactInfo.email}))disabled#end/>
    			有回帖时邮件提醒#if($dlog.is_email(${g_user.contactInfo.email}))(${g_user.contactInfo.email})#end
    		</div>
    		<div class="clear"></div>
    	</div>
		<div class="form_module_submit">
    		#if($log.status==5)
			<input type="submit" name="eventSubmit_PublishDraft" value="发表" onclick="return before_submit_diary();"/>#end
			<input type="submit" name="eventSubmit_UpdateLog" value="修改" onclick="return before_submit_update();"/>
            #if($log.lock==0)
				<input type="submit" name="eventSubmit_Lock" value="锁定" />
            #else
			<input type="submit" name="eventSubmit_UnLock" value="解锁" />
			#end
            <input type="submit" name="eventSubmit_Delete" value="删除" onclick="return confirm('您确认要删除该日记吗？');" />
            <input type="reset" value="重置" onclick="logForm.title.focus()" />
            <input type="button" value="返回" onclick="history.go(-1)" />
    		<div class="clear"></div>
    	</div>
	</div>
</div>
<div class="page_footer"></div>
</form>
