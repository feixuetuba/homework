<script language="javascript" type="text/javascript">
function delete_all(theForm){
    var selected = false;
    var s = document.getElementsByTagName('input');
    for (var i=0,c;c=s[i];i++){
        if (c.name=="mid" && c.checked == true){
            selected = true;
            break;
        }
    }
    if(selected){
        if(!confirm('真的要删除下面选中的所有歌曲嘛？'))
            return false;
        theForm.submit();
    }
}
</script>
