<body>
	<a name="top"></a>
	<div id="screen_content">${screen_content}</div>
	<div id="navigator">----------<br/><a name="bottom"></a><a href="#top">&#171;&nbsp;$text.wml("back_to_top")</a><br/>
    #if($g_site)<a href="$wap_home_url/${g_site.uniqueName}#top">&#171;&nbsp;$text.wml("back_to",$text.html(${g_site.friendlyName}))</a> <a href="$dlog.root()/wml/site.vm?sid=$g_site_id">详情</a><br/>#end
    #if($g_user && $g_user.ownSiteId>0 && ${g_user.ownSiteId}!=$g_site_id)<a href="$wap_home_url/?sid=${g_user.ownSiteId}">&#171;&nbsp;我的网记</a><br/>#end
    <a href="$wap_home_url">&#171;&nbsp;$text.wml("to_home",${site_name})</a></div>
	<div class="copyright">$date.get("yyyy/MM/dd EEE HH:mm")</div>
</body>
</html>